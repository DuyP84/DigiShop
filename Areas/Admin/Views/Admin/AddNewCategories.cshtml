@model DigiShop.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddNewCategories";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>THEM MOI DANH MUC</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddNewCategories">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryPhoto" class="control-label"></label>
                <input asp-for="CategoryPhoto" class="form-control" />
                <span asp-validation-for="CategoryPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryOrder" class="control-label"></label>
                <input asp-for="CategoryOrder" class="form-control" />
                <span asp-validation-for="CategoryOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryQuantity" class="control-label"></label>
                <input asp-for="CategoryQuantity" class="form-control" />
                <span asp-validation-for="CategoryQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

