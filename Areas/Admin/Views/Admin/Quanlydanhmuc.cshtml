
@model IEnumerable<DigiShop.Models.Category>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quanlydanhmuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Quan ly danh muc</h1>

<p>
    <a asp-action="AddNewCategories">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryQuantity)
            </td>
            <td>
                <a asp-action="UpdateCategories" asp-route-categoryId="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="DeleteCategories" asp-route-categoryId="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
