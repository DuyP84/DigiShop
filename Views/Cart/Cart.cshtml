@model Checkout


<head>
    <!-- Font awesome core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!--GOOGLE FONTS -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;700;800;900&display=swap" rel="stylesheet">

    <!--Slide Show Css -->
    <link href="~/assets/ItemSlider/css/main-style.css" rel="stylesheet" />

    <!-- Favicon -->
    <link href="~/assets-web2/img/favicon.ico" rel="icon">

    <!-- Libraries Stylesheet -->
    <link href="~/assets-web2/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/assets-web2/css/style.css" rel="stylesheet">


</head>
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
					@foreach (var line in Model?.Lines ?? Enumerable.Empty<CartLine>())
					{
                    <tr>
							<td class="align-middle"><img src="@line.Product.ProductPhoto" alt="" style="width: 50px;"> @line.Product.ProductName</td>
							<td class="align-middle">$ @line.Product.ProductPrice</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                        <a href="/Cart/UpdateCart/?productId=@line.Product.ProductId" class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </div>
                                <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@line.Quantity">
                                <div class="input-group-btn">
										<a href="/Cart/AddToCart/?productId=@line.Product.ProductId" class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </td>
							<td class="align-middle">$ @line.Product.ProductPrice</td>
                        <td class="align-middle"><button class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></td>
                    
					</tr>
                    }
                </tbody>
            </table>
			
        </div>
        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
						<h6 class="font-weight-medium">$ @Model.ComputeTotalValue()</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
						<h5 class="font-weight-bold">$ @(Model.ComputeTotalValue()+10)</h5>
                    </div>
                    <a href="/Checkout" class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="~/assets-web2/lib/easing/easing.min.js"></script>
<script src="~/assets-web2/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Contact Javascript File -->
<script src="~/assets-web2/mail/jqBootstrapValidation.min.js"></script>
<script src="~/assets-web2/mail/contact.js"></script>

<!-- Template Javascript -->
<script src="~/assets-web2/js/main.js"></script>