@*@model IEnumerable<DigiShop.Models.Product>*@

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<DigiShop.Models.Product>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 text-center col-sm-6 col-xs-6">
            <div class="thumbnail product-box">
                <img src="@item.ProductPhoto" alt="" />
                <div class="caption">
                    <h3><a href="#">@item.ProductName</a></h3>
                    <p>Price: <strong>$ @item.ProductPrice</strong></p>
                    <p>Discount: $ @(item.ProductPrice * (1 - item.ProductDiscount))</p>
                    <p>Optional dismiss button in tional dismiss button in</p>
                    <p>
                        <a href="/Cart/AddToCart/?productId=@item.ProductId" class="btn btn-success" role="button">Add To Cart</a>
                        <a href="/Products/Details/?id=@item.ProductId" class="btn btn-primary" role="button">See Details</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <ul class="pagination alg-right-pad">

        @Html.PagedListPager(Model, page => Url.Action("Index",new { page = page }))

        @*<li><a href="#">&raquo;</a></li>*@
    </ul>
</div>