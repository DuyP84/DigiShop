<!-----------=================== Product Start ------=============================== -->
<div class="col-md-9">
    <div>
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            @*<li class="active">Electronics</li>*@
            <li class="active">Trendy</li>
        </ol>
    </div>
    <!-- /.div -->
    <div class="row">
        <div class="btn-group alg-right-pad">
            <button type="button" class="btn btn-default"><strong>1235  </strong>items</button>
            <div class="btn-group">
                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                    Sort Products &nbsp;
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">By Price Low</a></li>
                    <li class="divider"></li>
                    <li><a href="#">By Price High</a></li>
                    <li class="divider"></li>
                    <li><a href="#">By Popularity</a></li>
                    <li class="divider"></li>
                    <li><a href="#">By Reviews</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.row -->
    
    <!-- Trending products ==============-->

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center col-sm-6 col-xs-6">
                <div class="thumbnail product-box">
                    <img src="@item.ProductPhoto" alt="" />
                    <div class="caption">
                        <h3><a href="#">@item.ProductName</a></h3>
                        <p>Price: <strong>$ @item.ProductPrice</strong></p>
                        <p>Discount: $ @(item.ProductPrice * (1 - item.ProductDiscount))</p>
                        <p>Optional dismiss button in tional dismiss button in</p>
                        <p>
                            <a href="/Cart/AddToCart/?productId=@item.ProductId" class="btn btn-success" role="button">Add To Cart</a>
                            <a href="/Products/Details/?id=@item.ProductId" class="btn btn-primary" role="button">See Details</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <ul class="pagination alg-right-pad">

            @Html.PagedListPager(Model, page => Url.Action("Index",new { page = page }))

            @*<li><a href="#">&raquo;</a></li>*@
        </ul>
    </div>
    <!-- END Trending products ================-->

    <div>
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>  
            <li class="active">Just Arrived</li>
        </ol>
    </div>
    <!-- /.div -->
    <div class="row">
        <div class="btn-group alg-right-pad">
            <button type="button" class="btn btn-default"><strong>3005  </strong>items</button>
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    Sort Products &nbsp;
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">By Price Low</a></li>
                    <li class="divider"></li>
                    <li><a href="#">By Price High</a></li>
                    <li class="divider"></li>
                    <li><a href="#">By Popularity</a></li>
                    <li class="divider"></li>
                    <li><a href="#">By Reviews</a></li>
                </ul>
            </div>
        </div>
    </div>
    
    <!-- Just Arrived products ==============-->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center col-sm-6 col-xs-6">
                <div class="thumbnail product-box">
                    <img src="@item.ProductPhoto" alt="" />
                    <div class="caption">
                        <h3><a href="#">@item.ProductName</a></h3>
                        <p>Price: <strong>$ @item.ProductPrice</strong></p>
                        <p>Discount: $ @(item.ProductPrice * (1 - item.ProductDiscount))</p>
                        <p>Optional dismiss button in tional dismiss button in</p>
                        <p>
                            <a href="/Cart/AddToCart/?productId=@item.ProductId" class="btn btn-success" role="button">Add To Cart</a>
                            <a href="/Products/Details/?id=@item.ProductId" class="btn btn-primary" role="button">See Details</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <ul class="pagination alg-right-pad">

            @Html.PagedListPager(Model, page => Url.Action("Index",new { page = page }))

            @*<li><a href="#">&raquo;</a></li>*@
        </ul>
    </div>
    <!--END Just Arrived products ==============-->
    
</div>

